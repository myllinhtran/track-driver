<h1>Editing Driver</h1>

<%= form_for @driver, url: { action: "update", id: @driver } do |f| %>
  <p>
    <label for="name">Name:</label>
    <%= f.text_field 'name' %>
  </p>
  <p>
    <label for="email">Email:</label>
    <%= f.text_field 'email' %>
  </p>
  <%= f.submit "Save Changes" %>
<% end %>
